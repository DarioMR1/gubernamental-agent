# LLM Provider Configuration
# Use either OpenAI or Anthropic - comment out the one you don't use

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Agent Configuration
LLM_PROVIDER=openai  # or anthropic
LLM_MODEL=gpt-4  # or claude-3-opus-20240229
PLAYWRIGHT_HEADLESS=true
SCREENSHOT_ON_ACTION=true
MAX_RETRY_ATTEMPTS=3
EXECUTION_TIMEOUT_SECONDS=300

# Database Configuration
DATABASE_URL=sqlite:///./gubernamental_agent.db
# For PostgreSQL: postgresql+asyncpg://username:password@localhost:5432/database_name

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# Storage Configuration
STORAGE_PATH=./storage
SCREENSHOTS_PATH=./screenshots
DOWNLOADS_PATH=./downloads
LOGS_PATH=./logs

# Security Configuration
ENCRYPT_CREDENTIALS=true
SECRET_KEY=your_secret_key_for_encryption_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
ENVIRONMENT=development  # development, staging, production

# CORS Configuration (comma-separated origins for React frontend)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1

# Authentication Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Rate Limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW_SECONDS=60

# Rate Limiting
MAX_CONCURRENT_SESSIONS=5
SESSION_TIMEOUT_MINUTES=60

# Monitoring and Observability
ENABLE_METRICS=true
METRICS_PORT=8080
ENABLE_TELEMETRY=false

# Browser Configuration
BROWSER_DOWNLOAD_PATH=./downloads
BROWSER_USER_DATA_DIR=./browser_data
BROWSER_WINDOW_WIDTH=1920
BROWSER_WINDOW_HEIGHT=1080

# Government Portal Specific Settings
SUNAT_BASE_URL=https://sunat.gob.pe
DEFAULT_WAIT_TIMEOUT=30000
PAGE_LOAD_TIMEOUT=60000
ELEMENT_WAIT_TIMEOUT=10000